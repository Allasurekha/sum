#include <stdio.h>
int sum(int);

int main()
{
    int n,r,sum;
    printf("enter a num");
    scanf("%d",&n);
    result=sum(n)
   print("the sum is:%d",result);
}
int sum(int n)
{
    int result;
    sum=0;
    while(n>0)
    {
        r=n%10;
        sum=sum+r
            }
            n=n/10;
            return sum;
}


